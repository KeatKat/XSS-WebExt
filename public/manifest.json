{
  "manifest_version": 2,
  "name": "Login Extension",
  "version": "1.0",
  "description": "A simple login extension",
  "browser_action": {
    "default_icon": {
      "48": "sharkicon48.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation"
  ],
  "icons": {
    "48": "sharkicon48.png"
  },
  "applications": {
    "gecko": {
      "id": "login-extension@example.com",
      "strict_min_version": "42.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
